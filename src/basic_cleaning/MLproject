name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Raw input data artifact
        type: string

      output_artifact:
        description: Cleaned output data artifact
        type: string

      output_type:
        description: The artifact type (e.g., cleaned_data)
        type: string

      output_description:
        description: Description of cleaned dataset
        type: string

      min_price:
        description: Minimum allowed rental price
        type: int

      max_price:
        description: Maximum allowed rental price
        type: int

    command: >-
      python run.py
      --input_artifact {input_artifact}
      --output_artifact {output_artifact}
      --output_type {output_type}
      --output_description {output_description}
      --min_price {min_price}
      --max_price {max_price}
